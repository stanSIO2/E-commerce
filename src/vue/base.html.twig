    <title>{% block title %} Avventura - {% endblock %} </title>
</head>
    <body>
        <nav>
            <ul>
                {% if session.login is defined %}
                    {% if session.role == 1 %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Administrateur</a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="index.php?page=produit">Produit</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="index.php?page=type">Type</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="index.php?page=utilisateur">Utilisateur</a>
                            </div>
                        </li>
                    {% endif %}
                    <li><a href="#">{{session.login}}</a></li>
                    <li><a href="index.php?page=deconnexion">Se déconnecter</a></li>
                {% else %}
                    <li><a href="index.php?page=connexion">Se connecter</a></li>
                {% endif %}
                <li><a href="index.php?page=inscrire">S'inscrire</a></li>
                <li><a href="index.php?page=accueil">Accueil</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
            <div class="search-bar">
                <input type="text" placeholder="Rechercher...">
                <button>Rechercher</button>
            </div>
        </nav>
        {% block contenu %}
