{% extends "base.html.twig" %}
{% block title %} {{ parent() }}Connexion{% endblock %}
{% block contenu %}

{% if form.valide is defined %} 
    {% if form.valide == true %}
        <h1>Connexion réussie</h1>
        <h1>Voici votre identifiant : {{form.email}}</h1>
        {% if form.role == 1 %}
        <h1>Vous êtes administrateur du site</h1>
        {% else %}
        <h1>Vous êtes un client du site </h1>
        {% endif %} 
    {% else %}
        <h1>Echec de la connexion</h1>
        <h1>Erreur : {{form.message}}</h1>
        <h1><a href="index.php?page=connexion">Retourner sur la page de connexion</a></h1>
    {% endif %}
{% else %}
<form action="index.php?page=connexion" method="post" enctype="application/x-www-form- urlencoded">
        <h2>Connexion</h2>
        <div class="form-group">
            <label for="email">Adresse Email :</label>
            <input type="email" id="email" name="email" placeholder="Entrez votre email" required>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="password" placeholder="Entrez votre mot de passe" required>
        </div>
        <button type="submit" class="login-button" name="btConnecter">Se connecter</button>
    </form>
    {% endif %}
{% endblock %}